<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reg_Ac">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regisztrálási űrlap"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:textColor="@color/cim"/>

    <EditText
        android:id="@+id/E_txt_Fnev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Név"
        android:layout_marginTop="120dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/E_txt_pw"
        android:hint="Jelszó"
        android:layout_below="@+id/E_txt_Tnev"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/E_txt_pwCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/E_txt_pw"
        android:hint="Jelszó megerősítése"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/E_txt_Tnev"
        android:hint="Teljes név"
        android:layout_below="@+id/E_txt_Fnev"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Btn_regist"
        android:layout_below="@id/E_txt_pwCheck"
        android:text="Regisztrálás"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>